<% content_for :plugins do %>
<link rel="stylesheet" href="assets/plugins/flexslider/flexslider.css" type="text/css" media="screen">
<link rel="stylesheet" href="assets/plugins/parallax-slider/css/parallax-slider.css" type="text/css">
<% end %>
<div class="slider-inner">
  <div id="da-slider" class="da-slider">
    <div class="da-slide">
      <h2><i><%= t('slider.first_title').html_safe %></i></h2>
      <p><%= t('slider.first_desc').html_safe %></p>
      <div class="da-img"><%= image_tag "drill1.jpg", style: "max-height: 100%;" %></div>
    </div>
    <div class="da-slide">
      <h2><%= t('slider.second_title').html_safe %></h2>
      <!-- <p><i>Lorem ipsum dolor amet</i> <br /> <i>tempor incididunt ut</i></p> -->
      <div class="da-img span6">
        <div class="span6">
          <iframe src="http://player.vimeo.com/video/40849741" width="100%" height="320" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
        </div>
      </div>
    </div>
    <div class="da-slide">
      <h2><%= t('slider.third_title').html_safe %></h2>
      <p><%= t('slider.third_desc').html_safe %></p>
      <div class="da-img">
        <%= image_tag "drill2.jpg", style: "max-height: 100%;" %>
      </div>
    </div>
    <nav class="da-arrows">
      <span class="da-arrows-prev"></span>
      <span class="da-arrows-next"></span>
    </nav>
  </div><!--/da-slider-->
</div><!--/slider-->
